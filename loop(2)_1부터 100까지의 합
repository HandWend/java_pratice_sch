/**
* for문 / while문
* @author smart02
* 1부터 100까지 합계 + 홀수합, 짝수합
*/
public class Loop2 {

	public static void main(String[] args) {
		int sum=0; 
		int odd=0; 
		int even = 0;
		int i=1;
		
		while (i<=100) {
			sum+=i; 
			if (i%2==0) {
				even+=i;
			}	else  { 
				odd+=i;
			}
			i++;
		}
		System.out.printf("1부터 100까지의 합: %d\n", sum);
		System.out.printf("홀수합: %d\n", odd);
		System.out.printf("짝수합: %d\n", even);
	}
}
